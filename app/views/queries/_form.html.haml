= form_for @query do |f|
  - if @query.errors.any?
    #error_explanation
      %h2= "#{pluralize(@query.errors.count, "error")} prohibited this query from being saved:"
      %ul
        - @query.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :mail_server_id
    = f.collection_select :mail_server_id, @mail_servers, :id, :name
  .field
    = f.label :block_list_server_id
    = f.collection_select :block_list_server_id, @block_list_servers, :id, :url
  .actions
    = f.submit 'Query'