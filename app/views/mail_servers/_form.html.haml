= form_for @mail_server do |f|
  - if @mail_server.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mail_server.errors.count, "error")} prohibited this mail_server from being saved:"
      %ul
        - @mail_server.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :ip
    = f.text_field :ip
  .field
    = f.label :description
    = f.text_area :description, :size => "40x3"
  .actions
    = f.submit 'Save'
